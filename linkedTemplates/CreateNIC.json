{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "NICName": {
            "type": "string",
            "metadata": {
                "description": "Name of the network card"
            }
        },
        "subnetName": {
            "type": "string",
            "metadata": {
                "description": "Name of subnet for NIC"
            }
        },
        "PublicIpNAme": {
            "defaultValue": "pip",
            "type": "string"
        },
        "DeployPublicIP": {
            "type": "string",
            "allowedValues": [
                "yes",
                "no"
            ]
        }
    },
    "variables": {
        "publicIPAddress": {
            "id": "[parameters('PublicIpNAme')]"
          }
    },
    "resources": [
        {
            "apiVersion": "2019-06-01",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[parameters('NICName')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "parameters('NICName')"
            },
            "dependsOn": [],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[parameters('subnetName')]"
                            },
                            "publicIPAddress": "[if(equals(parameters('DeployPublicIP'), 'yes'), variables('publicIPAddress'), json('null'))]"                  
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {}
}