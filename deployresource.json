{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "URL to location of linked templates"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "SAS Token to access linked templates"
            }
        },
        "PublicIpNAme": {
            "defaultValue": "pip",
            "type": "string"
        },
        "IPAllocationMethod": {
            "type": "string",
            "defaultValue": "Dynamic",
            "allowedValues": [
                "Dynamic",
                "Static"
            ]
        }
    },
    "variables": {
        "NetworkName": "vnet",
        "Subnet1Name": "subnet1"
    },
    "resources": [
        {
            "name": "CreateVnet",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/linkedTemplates/CreateVnet.json', parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetworkName": {
                        "value": "[variables('NetworkName')]"
                    },
                    "subnetName": {
                        "value": "[variables('Subnet1Name')]"
                    }
                }
            }
        },
        {
            "name": "CreatePIP",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/linkedTemplates/CreatePIP.json', parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "PublicIpNAme": {
                        "value": "[parameters('PublicIpNAme')]"
                    },
                    "IPAllocationMethod": {
                        "value": "[parameters('IPAllocationMethod')]"
                    }
                }
            }
        },
        {
            "name": "CreateNIC",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/linkedTemplates/CreateNIC.json', parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "NICName": {
                        "value": "nic"
                    },
                    "virtualNetworkName": {
                        "value": "[variables('NetworkName')]"
                    },
                    "subnetName": {
                        "value": "[variables('Subnet1Name')]"
                    },
                    "IPAllocationMethod": {
                        "value": "Dynamic"
                    },
                    "PublicIpNAme": {
                        "value": "[parameters('PublicIpNAme')]"
                    }
                }
            }
        } 
    ],
    "outputs": {}
}